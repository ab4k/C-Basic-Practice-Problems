// This is also a program to print sum of n natural numbers but in more efficeient way than previous.
// Runs in constant time.
// Time complexity: O(1).

#include <stdio.h>
int main() {
  int n, sum;
  printf("Enter the value of n: ");
  scanf("%d",&n);
  
  sum = n*(n+1)/2;
  printf("The sum of %d natural numbers is %d.", n, sum);
return 0;
}
  
